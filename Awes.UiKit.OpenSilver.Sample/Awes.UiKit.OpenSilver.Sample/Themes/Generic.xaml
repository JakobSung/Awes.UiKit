<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Awes.UiKit.OpenSilver.Sample.View;assembly=Awes.UiKit.OpenSilver.Sample">
    <Style TargetType="view:TestContentView">
        <Setter Property="Foreground" Value="#F3F3F3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="view:TestContentView">
                    <Grid Background="#2D2D2D">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding Message}" />
                            
                            <Button Content="Go to Dashboard" 
                                    Command="{Binding NavigateToDashboardCommand}"
                                    Width="200" Height="40" Margin="0,20,0,0" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
