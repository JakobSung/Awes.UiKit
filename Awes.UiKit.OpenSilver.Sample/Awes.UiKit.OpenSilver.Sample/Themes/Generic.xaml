<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Awes.UiKit.OpenSilver.Sample.View;assembly=Awes.UiKit.OpenSilver.Sample">
    <Style TargetType="view:TestContentView">
        <Setter Property="Foreground" Value="#F3F3F3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="view:TestContentView">
                    <Grid>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="TestContentView" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
