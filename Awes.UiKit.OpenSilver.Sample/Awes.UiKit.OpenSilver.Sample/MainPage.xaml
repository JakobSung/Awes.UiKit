<Page x:Class="Awes.UiKit.OpenSilver.Sample.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Awes.UiKit.OpenSilver.Sample"
      xmlns:layout="clr-namespace:Awes.UiKit.OpenSilver.Layout;assembly=Awes.UiKit.OpenSilver"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}">
    <layout:SideMenuLayout>
        <layout:SideMenuLayout.MenuHeader>
            <Grid Height="50">
                <TextBlock Text="Menu Header"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Grid>
        </layout:SideMenuLayout.MenuHeader>
        <layout:SideMenuLayout.MenuFooter>
            <Grid Height="50">
                <TextBlock Text="Menu Footer"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Grid>
        </layout:SideMenuLayout.MenuFooter>
    </layout:SideMenuLayout>
</Page>
